		"test": "vitest run",
		"test:watch": "vitest --watch",
		"test:cov": "vitest run --coverage --browser.headless",
		"seed": "npx ts-node -r tsconfig-paths/register ./scripts/seed/index.ts"
	},
	"prisma": {
		"schema": "./prisma/schema"
	},
