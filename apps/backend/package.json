{
	"name": "backend",
	"version": "0.0.0",
	"description": "Backend (API)",
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "prisma generate && nest build",
		"start": "nest start",
		"dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"typecheck": "tsc --noEmit",
		"biome": "biome check",
