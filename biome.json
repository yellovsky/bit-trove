{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							[
								":URL:",
								":NODE:"
							],
							":BLANK_LINE:",
							[
								":PACKAGE:",
								"!@repo/**/*",
								"!@shared/**/*",
								"!@app/**/*",
								"!@widgets/**/*",
								"!@features/**/*",
								"!@entities/**/*",
								"!src/**/*"
							],
							":BLANK_LINE:",
							"@repo/**/*",
							":BLANK_LINE:",
							"@shared/**",
							":BLANK_LINE:",
							"@app/**",
							":BLANK_LINE:",
							"@widgets/**",
							":BLANK_LINE:",
							"@features/**",
							":BLANK_LINE:",
							"@entities/**",
							":BLANK_LINE:",
							"src/shared/**/*",
							":BLANK_LINE:",
							"src/modules/**/*",
							":BLANK_LINE:",
							"src/**/*",
							":BLANK_LINE:",
							"./domain/**/*",
							":BLANK_LINE:",
							"./application/**/*",
							":BLANK_LINE:",
							"./infrastructure/**/*",
							":BLANK_LINE:",
							":PATH:"
						]
					}
				},
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		},
		"parser": {
			"cssModules": true
		}
	},
	"files": {
		"includes": [
			"**/src/**/*",
			"**/*.json",
			"!**/package.json",
			"**/scripts/**/*",
			"**/app/**/*",
			"!**/coverage/**/*",
			"!**/dist/**/*"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"lineWidth": 120
	},
	"javascript": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"jsxQuoteStyle": "double",
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "es5"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"json": {
		"assist": {
			"enabled": false
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"recommended": true
			},
			"complexity": {
				"recommended": true
			},
			"correctness": {
				"noUnusedFunctionParameters": "error",
				"noUnusedImports": "error",
				"noUnusedLabels": "error",
				"noUnusedVariables": "error",
				"recommended": true
			},
			"nursery": {
				"noUnknownAtRule": "off",
				"recommended": true,
				"useSortedClasses": {
					"fix": "safe",
					"level": "error",
					"options": {
						"functions": [
							"cn",
							"cva",
							"tw",
							"clsx",
							"twMerge"
						]
					}
				}
			},
			"performance": {
				"recommended": true
			},
			"recommended": true,
			"security": {
				"recommended": true
			},
			"style": {
				"noInferrableTypes": "error",
				"noParameterAssign": "error",
				"noProcessEnv": "error",
				"noUnusedTemplateLiteral": "error",
				"noUselessElse": "error",
				"recommended": true,
				"useAsConstAssertion": "error",
				"useConst": "error",
				"useDefaultParameterLast": "error",
				"useEnumInitializers": "error",
				"useNumberNamespace": "error",
				"useSelfClosingElements": "error",
				"useSingleVarDeclarator": "error"
			},
			"suspicious": {
				"noConsole": {
					"level": "error",
					"options": {
						"allow": [
							"assert",
							"error",
							"info",
							"warn"
						]
					}
				},
				"recommended": true
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": true,
		"useIgnoreFile": true
	}
}